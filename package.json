{
  "name": "discord-irc",
  "description": "Connects IRC and Discord channels by sending messages back and forth.",
  "keywords": [
    "discord",
    "irc",
    "gateway",
    "bot",
    "discord-irc",
    "reactiflux"
  ],
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:FauxFaux/discord-irc.git"
  },
  "bugs": {
    "url": "https://github.com/FauxFaux/discord-irc/issues"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "format": "prettier --write '{lib,test}/**/*.?s'",
    "prepare": "npm run build",
    "lint": "eslint . --ignore-path .gitignore",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "coverage": "vitest run --coverage"
  },
  "license": "MIT",
  "dependencies": {
    "commander": "^7.2.0",
    "discord.js": "^13.8.1",
    "irc-colors": "1.5.0",
    "irc-formatting": "1.0.0-rc3",
    "irc-upd": "0.11.0",
    "lodash": "^4.17.21",
    "simple-markdown": "^0.7.3",
    "strip-json-comments": "^3.1.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^22",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "~3.5",
    "typescript": "~5.8",
    "vitest": "^3"
  }
}

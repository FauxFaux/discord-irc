{
  "name": "discord-irc",
  "description": "Connects IRC and Discord channels by sending messages back and forth.",
  "keywords": [
    "discord",
    "irc",
    "gateway",
    "bot",
    "discord-irc",
    "reactiflux"
  ],
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:FauxFaux/discord-irc.git"
  },
  "bugs": {
    "url": "https://github.com/FauxFaux/discord-irc/issues"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "format": "prettier --write '{lib,test}/**/*.?s'",
    "prepare": "npm run build",
    "lint": "eslint . --ignore-path .gitignore",
    "test": "mocha --require ./test/babel-register.js -- 'test/*.test.?s'"
  },
  "license": "MIT",
  "dependencies": {
    "commander": "^7.2.0",
    "discord.js": "^13.8.1",
    "irc-colors": "1.5.0",
    "irc-formatting": "1.0.0-rc3",
    "irc-upd": "0.11.0",
    "lodash": "^4.17.21",
    "simple-markdown": "^0.7.3",
    "strip-json-comments": "^3.1.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.13.16",
    "@tsconfig/node16": "^1.0.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.11.43",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "chai": "^4.3.4",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "mocha": "^10.0.0",
    "prettier": "~3.5",
    "sinon": "^14.0.0",
    "sinon-chai": "^3.6.0",
    "typescript": "~4.7.4"
  }
}
